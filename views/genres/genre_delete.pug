extends ../layout

block content

    h1 #{title}: #{genre.name}

    if books.length
        p #[strong Delete the following books before attempting to delete this genre.]

        div(style='margin-left:20px;margin-top:20px')
            h4 Books:
            dl
            each book in books
                hr
                dd: a(href=book.url) #{book.title}
                each gnr in book.genre
                    dd #{gnr.name}

                hr

    else
        p Do you really want to delete this genre?
        form(method='POST' action='')
            div.form-group
                input#authorid.form-control(
                    type='hidden',
                    name='genreid',
                    required='true',
                    value=genre._id
                )
            button(class='btn btn-warning' type='submit') Delete