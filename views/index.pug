extends layout

block content
  h1= title
  p Welcome to #[strong Local Library], the library has the following record counts:
  
  if error
    p Error getting dynamic content.

  else
    ul.content-ul
      li: a(href='/catalog/books') #[strong Books:] !{data.book_count}
      li: a(href='/catalog/bookinstances') #[strong Copies:] !{data.book_instance_count}
      li: a(href='/catalog/bookinstances') #[strong Copies available:] !{data.book_instance_available_count}
      li: a(href='/catalog/authors') #[strong Authors:] !{data.author_count}
      li: a(href='/catalog/genre') #[strong Genres:] !{data.genre_count}